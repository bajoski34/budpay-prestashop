{
    "type": "prestashop-module",
    "name": "budpay/prestashop",
    "description": "",
    "homepage": "https://github.com/budpay/",
    "license": "AFL-3.0",
    "authors": [
        {
            "name": "Budpay Developers",
            "email": "info@budpay.com",
            "homepage": "https://devs.budpay.com"
        }
    ],
    "config": {
        "platform": {
            "php": "5.6.0"
        },
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "sort-packages": true,
        "prepend-autoloader": false
    },
    "autoload": {
        "classmap": [
            "controllers",
            "budpay.php"
        ]
    },
    "scripts": {
        "set-license-header": [
            "@php ./vendor/bin/header-stamp --license=\"assets/afl.txt\" --exclude=\".github,vendor\""
        ]
    },
    "require-dev": {
        "prestashop/php-dev-tools": "~3.0"
    },
    "author": "BudpayDevelopers"
}